<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-lg-6 col-md-6 mt-4 mt-sm-0">
            <p class="text-end">
                <p class="text-right">Hola {{persona}}!
                    <a href="/admin/login/logout" class="btn btn-danger">
                    Cerrar sesi√≥n <i class="fas fa-sign-out"></i></a></p>           
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Promociones</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/promociones/agregar" class="btn btn-success">
            <i class="fa fa-plus"></i>Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-right" style="width: 20%">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                     {{#each promociones}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-right">
                            <a href="/admin/promociones/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/promociones/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>